<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/20"
      fx:controller="com.example.library.controller.UserManagementController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Gestion des Utilisateurs" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Nom de l'utilisateur :" />
            <TextField fx:id="userNameField" promptText="Saisissez le nom"/>
        </VBox>
        <Button text="Ajouter" onAction="#handleAddUser" />
    </HBox>

    <TableView fx:id="userTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="userIdColumn" text="ID"/>
            <TableColumn fx:id="userNameColumn" text="Nom"/>
        </columns>
    </TableView>
</VBox>
