<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library.controller.LibraryController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Formulaire d'ajout/suppression et accès aux logs -->
    <HBox spacing="10">
        <TextField fx:id="titleField"    promptText="Titre"  />
        <TextField fx:id="authorField"   promptText="Auteur" />
        <TextField fx:id="genreField"    promptText="Genre"  />
        <TextField fx:id="editionField"  promptText="Édition"/>
        <Button    text="Ajouter"        onAction="#addBook"/>
        <Button    text="Supprimer"      onAction="#deleteBook"/>
        <Button    text="Voir Logs"      onAction="#openLogs"/>
    </HBox>

    <!-- TableView des livres (étend verticalement) -->
    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn"    text="Titre"    prefWidth="150"/>
            <TableColumn fx:id="authorColumn"   text="Auteur"   prefWidth="120"/>
            <TableColumn fx:id="genreColumn"    text="Genre"    prefWidth="100"/>
            <TableColumn fx:id="editionColumn"  text="Édition"  prefWidth="100"/>
            <TableColumn fx:id="isbnColumn"     text="ISBN"     prefWidth="120"/>
            <TableColumn fx:id="statusColumn"   text="Statut"   prefWidth="100"/>
            <TableColumn fx:id="loanDateColumn" text="Emprunt"  prefWidth="130"/>
        </columns>
    </TableView>
</VBox>
