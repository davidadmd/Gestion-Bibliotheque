<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/20"
      fx:controller="com.example.library.controller.LoanController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Emprunter un Livre" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Nom de l'utilisateur :" />
            <TextField fx:id="userNameField" promptText="Saisissez le nom"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Livre :" />
            <ComboBox fx:id="bookCombo"/>
        </VBox>
    </HBox>

    <HBox spacing="10">
        <Button text="Emprunter" onAction="#handleLoan" />
        <Button text="Retourner Livre" onAction="#handleReturn" />
    </HBox>

    <TableView fx:id="loanTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="loanUserColumn" text="Utilisateur"/>
            <TableColumn fx:id="loanBookColumn" text="Livre"/>
            <TableColumn fx:id="loanDateColumn" text="Date Emprunt"/>
            <TableColumn fx:id="dueDateColumn" text="Date Retour"/>
        </columns>
    </TableView>
</VBox>
